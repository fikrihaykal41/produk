<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#"><img src="assets/images/geloraputih.png" width="75"></a>
      <h1 style="font-family: 'Lobster Two', cursive !important; color:white">Data Peserta</h1>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Kelola Peserta</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Nilai Juri 1</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Nilai Juri 2</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Nilai Juri 3</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Kelola Admin</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End of Navbar -->


  <!--Main Content-->
   <div class="m-content container" style="margin-bottom: 10%;">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPesertaModal">Tambah Peserta</button>
      <!-- Modal -->
      <div class="modal fade" id="addPesertaModal" tabindex="-1" role="dialog" aria-labelledby="addPeserta" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addPesertaLabel">Tambah Peserta</h5>
            </div>
            <div class="modal-body">
              <form role="form" method="post" action="/add">
                <div class="form-group ml-auto">
                  <label for="nourut">No Urut</label>
                  <input type="number" class="boks form-control" id="nourut" name="nourut" placeholder="contoh : 18xx">
                </div>
                <div class="form-group ml-auto">
                  <label for="nourut">Nama Sekolah</label>
                  <input type="text" class="boks form-control" id="nama" name="nama" placeholder="contoh : SMA/SMK xxx" >
                </div>
                <button type="submit" class="btn btn-general btn-block" id="submit">Tambah Peserta</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- End of Modal -->

      <br><br><br>
      <table id="dataTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>No Urut</th>
                <th>Nama Sekolah</th>
                <th>PBB</th>
                <th>Danton</th>
                <th>Vafor</th>
                <th>Total Nilai</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          {{#each peserta}}
          <tr>
            <td>{{nourut}}</td>
            <td>{{nama}}</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#editPesertaModal">Count</button>
                <a href="#" class="btn btn-sm btn-danger">Delete</a>
              </div>
            </td>
          </tr>
          {{/each}}
           <!-- Modal -->
          <div class="modal fade" id="editPesertaModal" tabindex="-1" role="dialog" aria-labelledby="editPeserta" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="editPesertaLabel">Edit Peserta</h5>
                </div>
                <div class="modal-body">
                  <form role="form" method="post" action="">
                    <div class="form-group ml-auto">
                      <label for="nourut">No Urut</label>
                      <input type="number" class="boks form-control" id="nourut" name="nourut" value="" disabled>
                      <input type="hidden" name="nourut" value="">
                    </div>
                    <div class="form-group ml-auto">
                      <label for="nama">Nama Sekolah</label>
                      <input type="text" class="boks form-control" id="nama" name="nama" value="" disabled>
                      <input type="hidden" name="nama" value="">
                    </div>
                    <div class="form-group ml-auto">
                      <label for="total1">PBB</label>
                      <input type="text" class="boks form-control" id="total1" name="total1" value="" disabled>
                      <input type="hidden" name="total1" value="">
                    </div>
                    <div class="form-group ml-auto">
                      <label for="total2">Danton</label>
                      <input type="text" class="boks form-control" id="total2" name="total2" value="" disabled>
                      <input type="hidden" name="total2" value="">
                    </div>
                    <div class="form-group ml-auto">
                      <label for="total3">Vafor</label>
                      <input type="text" class="boks form-control" id="total3" name="total3" value="" disabled>
                      <input type="hidden" name="total3" value="">
                    </div>
                    <input type="hidden" name="code" value="private">
                    <button type="submit" class="btn btn-general btn-block" id="submit">Hitung</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- End of Modal -->
        </tbody>

      </table>
    </div>
  <!--End of Main Content-->

  <!-- Footer -->
  <div class="footer">
    <div class="container">
      <p>Â©2018 Gelora | Magista. All Rights Reserved</p>
    </div>
  </div>
  <!-- End of Footer -->

</body>

